<Window x:Class="ICSharpCode.ILSpy.Options.OptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{DynamicResource DialogWindow}"
        WindowStartupLocation="CenterOwner"
        Icon="../Images/ILSpy.ico"
        ResizeMode="CanResizeWithGrip"
        MinHeight="300" MinWidth="400"
        xmlns:mm="clr-namespace:ICSharpCode.ILSpy"
        mm:HideWindowsButtons.MaxMinButtons="True"
        Title="Options" Height="400" Width="500">
	<Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="1*" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<TabControl Name="tabControl" Margin="0 0 0 5"/>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button IsDefault="True" Style="{StaticResource DialogButton}" Margin="0,0,5,0" Name="okButton" Click="OKButton_Click">_OK</Button>
			<Button IsCancel="True" Style="{StaticResource DialogButton}">_Cancel</Button>
		</StackPanel>
	</Grid>
</Window>