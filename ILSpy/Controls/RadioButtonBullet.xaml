<UserControl x:Class="ICSharpCode.ILSpy.Controls.RadioButtonBullet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Width="12" Height="12"
             mc:Ignorable="d" 
             d:DesignHeight="12" d:DesignWidth="12">
	<Grid>
		<Ellipse Name="outerBorder" StrokeThickness="1" />
		<Ellipse Name="innerBorder" StrokeThickness="1" Margin="2" />
		<!-- TODO: Margin should be 2.5 but it doesn't seem to be possible for it to be drawn
		completely in the middle even when SnapsToDevicePixels=False. Use Margin=2 instead, which
		results in a slightly bigger circle than the original bullet control. -->
		<Ellipse Name="ellipse" StrokeThickness="1" Margin="2" />
	</Grid>
</UserControl>