<UserControl x:Class="ICSharpCode.ILSpy.AsmEditor.DnlibDialogs.DeclSecurityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dnlibdlgs="clr-namespace:ICSharpCode.ILSpy.AsmEditor.DnlibDialogs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
	<UserControl.Resources>
		<Style x:Key="DisableImageStyle" TargetType="{x:Type Image}">
			<Style.Triggers>
				<DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type Control}, AncestorLevel=1}, Path=IsEnabled}" Value="False">
					<Setter Property="Opacity" Value="0.30" />
				</DataTrigger>
			</Style.Triggers>
		</Style>
		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
	</UserControl.Resources>
	<TabControl>
		<TabItem Header="Main">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Grid Grid.Row="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<ComboBox Grid.Column="0" Margin="0 0 0 0" Style="{StaticResource {x:Static ToolBar.ComboBoxStyleKey}}" DisplayMemberPath="Name" Width="120" ItemsSource="{Binding SecurityActionEnumList.Items}" SelectedIndex="{Binding SecurityActionEnumList.SelectedIndex}" VerticalContentAlignment="Center" />
					<ComboBox Grid.Column="1" Margin="5 0 0 0" Style="{StaticResource {x:Static ToolBar.ComboBoxStyleKey}}" DisplayMemberPath="Name" Width="30" ItemsSource="{Binding DeclSecVerEnumList.Items}" SelectedIndex="{Binding DeclSecVerEnumList.SelectedIndex}" VerticalContentAlignment="Center" />
				</Grid>
				<Grid Grid.Row="1" Visibility="{Binding IsV1, Converter={StaticResource BooleanToVisibilityConverter}}">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>
					<Label Grid.Row="0" Target="{Binding ElementName=xmlTextBox}" Content="_XML" />
					<TextBox Grid.Row="1" Name="xmlTextBox" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding V1XMLString, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, UpdateSourceTrigger=PropertyChanged}" />
				</Grid>
				<Grid Grid.Row="1" Visibility="{Binding IsV2, Converter={StaticResource BooleanToVisibilityConverter}}">
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>

					<ListView Grid.Row="0"
							  Margin="0 5 0 0"
							  Name="listView"
							  MouseDoubleClick="listView_MouseDoubleClick"
							  HorizontalContentAlignment="Stretch"
							  SelectionMode="Single"
							  ItemsSource="{Binding SecurityAttributeCollection}"
							  DisplayMemberPath="FullName"
							  SelectedIndex="{Binding SecurityAttributeCollection.SelectedIndex}" />

					<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 5 0 0">
						<RepeatButton Margin="0 0 5 0" Command="{Binding SecurityAttributeCollection.MoveUpCommand}" ToolTip="Move Up">
							<RepeatButton.Content>
								<Image Width="16" Height="16" Source="../../Images/ArrowUp.png" Style="{StaticResource DisableImageStyle}" />
							</RepeatButton.Content>
						</RepeatButton>
						<RepeatButton Margin="0 0 5 0" Command="{Binding SecurityAttributeCollection.MoveDownCommand}" ToolTip="Move Down">
							<RepeatButton.Content>
								<Image Width="16" Height="16" Source="../../Images/ArrowDown.png" Style="{StaticResource DisableImageStyle}" />
							</RepeatButton.Content>
						</RepeatButton>

						<Button Content="_Edit..." Style="{StaticResource DialogButton}" Margin="0 0 5 0" Command="{Binding EditCommand}" />
						<Button Content="_Add..." Style="{StaticResource DialogButton}" Margin="0 0 5 0" Command="{Binding AddCommand}" />
						<Button Content="_Remove" Style="{StaticResource DialogButton}" Margin="0 0 0 0" Command="{Binding SecurityAttributeCollection.RemoveCommand}" />
					</StackPanel>
				</Grid>
			</Grid>
		</TabItem>
		<TabItem Header="Custom Attributes">
			<dnlibdlgs:CustomAttributesControl Margin="0 5 0 0" DataContext="{Binding CustomAttributesVM}" />
		</TabItem>
	</TabControl>
</UserControl>