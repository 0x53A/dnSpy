<UserControl x:Class="ICSharpCode.ILSpy.AsmEditor.DnlibDialogs.CreateTypeSigArrayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ICSharpCode.ILSpy.AsmEditor.DnlibDialogs"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500">
	<UserControl.Resources>
		<Style x:Key="DisableImageStyle" TargetType="{x:Type Image}">
			<Style.Triggers>
				<DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type Control}, AncestorLevel=1}, Path=IsEnabled}" Value="False">
					<Setter Property="Opacity" Value="0.30" />
				</DataTrigger>
			</Style.Triggers>
		</Style>
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<local:TypeSigCreatorControl Grid.Row="0" DataContext="{Binding TypeSigCreator}" />

		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<ListView Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
					  Margin="0 5 0 0"
					  IsEnabled="{Binding IsEnabled}"
					  Name="listView"
					  ItemsSource="{Binding TypeSigCollection}"
					  DisplayMemberPath="FullName"
					  SelectedItem="{Binding SelectedItem}" />
			<RepeatButton Grid.Row="0" Grid.Column="1"
					Margin="5 5 0 0"
					Command="{Binding MoveUpCommand}"
					ToolTip="Move Up">
				<RepeatButton.Content>
					<Image Width="16" Height="16" Source="../../Images/ArrowUp.png" Style="{StaticResource DisableImageStyle}" />
				</RepeatButton.Content>
			</RepeatButton>
			<RepeatButton Grid.Row="2" Grid.Column="1"
					Margin="5 5 0 0"
					Command="{Binding MoveDownCommand}"
					ToolTip="Move Down">
				<RepeatButton.Content>
					<Image Width="16" Height="16" Source="../../Images/ArrowDown.png" Style="{StaticResource DisableImageStyle}" />
				</RepeatButton.Content>
			</RepeatButton>
		</Grid>
	</Grid>
</UserControl>