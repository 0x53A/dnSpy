<Window x:Class="ICSharpCode.ILSpy.MsgBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Width="400" Height="300"
             SizeToContent="Height"
             ResizeMode="NoResize"
             Icon="Images/ILSpy.ico"
             Title="dnSpy"
             WindowStartupLocation="CenterOwner"
             Style="{DynamicResource DialogWindow}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
	<StackPanel FocusManager.FocusedElement="{Binding ElementName=okButton}">
		<Grid Margin="10,20,10,20">
			<TextBlock Name="textBlock" TextWrapping="Wrap" />
		</Grid>
		<DockPanel LastChildFill="True" Margin="10,0,10,10">
			<Button Content="_Cancel" Click="cancelButton_Click" IsCancel="True" Height="23" Name="cancelButton" Width="75" Margin="5,0,0,0" DockPanel.Dock="Right" />
			<Button Content="_No" Click="noButton_Click" Height="23" Name="noButton" Width="75" Margin="5,0,0,0" DockPanel.Dock="Right" />
			<Button Content="_OK" Click="okButton_Click" IsDefault="True" Height="23" Name="okButton" Width="75" Margin="5,0,0,0" DockPanel.Dock="Right" />
			<CheckBox Name="dontShowCheckBox" Content="_Don't show again" DockPanel.Dock="Left" />
		</DockPanel>
	</StackPanel>
</Window>
